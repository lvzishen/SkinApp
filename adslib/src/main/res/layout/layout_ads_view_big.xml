<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="#ab2c2c">

    <TextView
        android:id="@+id/big_ads_top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/qb_px_18"
        android:gravity="center"
        android:alpha="0"
        android:textColor="@android:color/white"
        android:textSize="@dimen/qb_sp_22"
        tools:text="fldjsalfjjdsaf" />

    <TextView
        android:id="@+id/big_ads_top_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/qb_px_18"
        android:layout_marginTop="5dip"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        tools:text="fldjsalfjjdsaf" />

    <com.ads.lib.mediation.widget.NativeAdContainer
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dip">

        <LinearLayout
            android:id="@+id/big_ads_root_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:alpha="0"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_20"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.lib.ads.view.AdsLogoView
                    android:id="@+id/big_ads_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/qb_px_24"
                    android:alpha="0.5"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    app:logo_text_color="#ffffff" />

                <FrameLayout
                    android:id="@+id/big_ads_ad_choice_view"
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qb_px_24"
                android:layout_marginRight="@dimen/qb_px_24"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="82dp"
                        android:layout_height="82dp"
                        android:layout_gravity="center"
                        android:alpha="0.5"
                        android:src="@drawable/icon_blue_round_mask" />

                    <com.ads.lib.mediation.widget.AdIconView
                        android:id="@+id/big_ads_icon"
                        android:layout_width="48dip"
                        android:layout_height="48dip"
                        android:layout_gravity="center"
                        tools:src="@drawable/default_apk_icon" />

                </FrameLayout>

                <TextView
                    android:id="@+id/big_ads_app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/qb_sp_16"
                    tools:text="Instagram\nInstagram Application \nasdgasdg" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/big_ads_clickable_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.lib.ads.view.BigAdFramelayout
                    android:id="@+id/big_ads_img_parent"
                    android:layout_width="match_parent"
                    android:layout_height="150dip"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/qb_px_24"
                    android:layout_marginRight="@dimen/qb_px_24"
                    android:background="@drawable/ads_view_shadow">

                    <com.ads.lib.mediation.widget.NativeMediaView
                        android:id="@+id/big_ads_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="14dip"
                        android:background="@android:color/white"
                        android:padding="@dimen/qb_px_6"
                        android:scaleType="fitXY"
                         />

                </com.lib.ads.view.BigAdFramelayout>

                <TextView
                    android:id="@+id/big_ads_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/qb_px_24"
                    android:layout_marginTop="@dimen/qb_px_8"
                    android:layout_marginRight="@dimen/qb_px_24"
                    android:layout_marginBottom="@dimen/qb_px_16"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    tools:text="A style of your life\nGet the Instagram App\nInstall on Google Play" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/qb_px_24"
                    android:layout_marginRight="@dimen/qb_px_24"
                    android:layout_marginBottom="10dp"
                    app:cardElevation="2dip">

                    <com.guardian.security.pro.ui.RippledTextView
                        android:id="@+id/big_ads_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_green_btn"
                        android:gravity="center"
                        android:maxLines="2"
                        android:padding="10dp"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/qb_sp_18"
                        android:textStyle="bold"
                        tools:text="Yes, this is more than 20 chars" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

    </com.ads.lib.mediation.widget.NativeAdContainer>

</LinearLayout>