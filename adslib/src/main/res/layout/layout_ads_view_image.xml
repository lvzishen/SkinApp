<?xml version="1.0" encoding="utf-8"?>
<com.ads.lib.mediation.widget.NativeAdContainer xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pop_ad_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.ads.lib.view.AdsLogoView
                android:id="@+id/layout_image_ads_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                app:logo_text_color="#ffffff" />

            <FrameLayout
                android:id="@+id/layout_image_ads_choice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_20"
                android:layout_gravity="top" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/layout_image_ads_img_parent"
            android:layout_width="match_parent"
            android:layout_height="150dip"
            android:layout_marginLeft="@dimen/qb_px_24"
            android:layout_marginRight="@dimen/qb_px_24">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_ads_default_blue_bg" />

            <com.ads.lib.mediation.widget.NativeMediaView
                android:id="@+id/layout_image_ads_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/qb_px_24"
            android:layout_marginRight="@dimen/qb_px_24">

            <LinearLayout
                android:id="@+id/layout_image_ads_title_bg"
                android:layout_width="match_parent"
                android:layout_height="20dip"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/color_image_ads_default_bg" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="3" />

            </LinearLayout>

            <TextView
                android:id="@+id/layout_image_ads_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:paddingTop="12dip"
                android:paddingBottom="12dip"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                tools:text="Capital Cash in Google Play" />
        </FrameLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:layout_marginLeft="@dimen/qb_px_24"
            android:layout_marginRight="@dimen/qb_px_24"
            android:layout_marginBottom="24dip"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="2dip">

            <TextView
                android:id="@+id/layout_image_ads_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_image_ads_default_bg"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                tools:text="Visite Site" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</com.ads.lib.mediation.widget.NativeAdContainer>