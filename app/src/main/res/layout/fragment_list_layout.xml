<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.goodmorning.view.recyclerview.CommonRecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:id="@+id/rv_list"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/qb_px_60"
        android:id="@+id/ll_list_retry"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/home_unusual"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/home_empty"
            android:textColor="@color/setting_txt_content_color"
            android:textSize="@dimen/qb_sp_14"/>

        <Button
            android:layout_width="117dp"
            android:layout_height="@dimen/qb_px_36"
            android:background="@drawable/shape_retry_btn_bg"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/qb_px_22"
            android:textColor="@color/retry_btn_txt_color"
            android:text="@string/retry_txt"
            android:id="@+id/list_retry_btn"/>

    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/qb_px_138"
        android:visibility="gone"
        app:lottie_fileName="loading.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_scale="0.2"
        android:id="@+id/iv_home_load_icon"/>

</RelativeLayout>