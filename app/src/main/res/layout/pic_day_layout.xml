<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="@dimen/qb_px_39"
        android:layout_marginRight="@dimen/qb_px_39"
        android:layout_marginTop="@dimen/qb_px_100"
        android:scaleType="fitXY"
        android:id="@+id/iv_pic"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qb_px_39"
        android:layout_marginRight="@dimen/qb_px_39"
        android:orientation="vertical"
        android:background="@drawable/shape_day_bottom_bg"
        android:layout_below="@+id/iv_pic"
        android:id="@+id/ll_share_img">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_17"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/color_444444"
            android:textSize="19sp"
            android:text="@string/img_day"
            android:id="@+id/img_day_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_6"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/color_bbbbbb"
            android:text="@string/img_share_day"
            android:textSize="@dimen/qb_sp_15"
            android:id="@+id/img_day_txt"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/toast_btn"
            android:layout_marginRight="@dimen/qb_px_31"
            android:layout_marginLeft="@dimen/qb_px_31"
            android:layout_marginTop="@dimen/qb_px_19"
            android:layout_alignBottom="@+id/iv_pic"
            android:layout_alignBaseline="@+id/iv_pic"
            android:layout_marginBottom="@dimen/qb_px_15"
            android:text="@string/share"
            android:textColor="@color/share_txt_color"
            android:textAllCaps="false"
            android:textSize="19sp"
            android:id="@+id/btn_share"/>

    </LinearLayout>



    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ll_share_img"
        android:layout_marginTop="@dimen/qb_px_33"
        android:background="@drawable/toast_close"
        android:id="@+id/btn_close"/>

</RelativeLayout>